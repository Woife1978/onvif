<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>Mictlanix.DotNet.OnvifClient</AssemblyName>
    <RootNamespace>Mictlanix.DotNet.Onvif</RootNamespace>
    <ReleaseVersion>0.0.3</ReleaseVersion>
    <PackageId>OnvifClient.Core</PackageId>
    <Authors>OnvifClient.Core</Authors>
    <Product>OnvifClient.Core</Product>
    <Version>1.0.1</Version>
    <Description>A lightweight ONVIF Client library. 
Support NetCore.</Description>
    <PackageProjectUrl>https://github.com/pedoc/onvif.git</PackageProjectUrl>
    <PackageReleaseNotes>Compatible with some Huawei IPC</PackageReleaseNotes>
  </PropertyGroup>
  <ItemGroup>
    <DotNetCliToolReference Include="dotnet-svcutil" Version="1.0.*" />
  </ItemGroup>
  <ItemGroup>
    <None Remove=".DS_Store" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Security\" />
    <Folder Include="Common\" />
    <Folder Include="Device\" />
    <Folder Include="Media\" />
    <Folder Include="Ptz\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.ServiceModel.Http" Version="4.5.3" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.ServiceModel.Duplex" Version="4.4.*" />
    <PackageReference Include="System.ServiceModel.NetTcp" Version="4.4.*" />
    <PackageReference Include="System.ServiceModel.Security" Version="4.4.*" />
  </ItemGroup>
</Project>